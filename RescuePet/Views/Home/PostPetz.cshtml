@model RescuePet.Models.DBEntities.FiltersVM

@{
    ViewBag.Title = "PostPetz";
}
<head>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/modernizr")
</head>
<h2>PostPetz</h2>


@using (Html.BeginForm("DoInsert", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   
    @*</div>*@

    <div style="display: flex; justify-content: space-between;">

        <!-- Column 1 -->
        <div style="flex: 1; margin-right: 10px;">
            <label for="fullname">Full Name</label>
            @Html.TextBox("fullname", null, new { @class = "form-control", @type = "text" })

            <label for="phonenumber">Phone Number</label>
            @Html.TextBox("phonenumber", null, new { @class = "form-control", @type = "text" })

            @*<label for="donation">Donation</label>
            @Html.TextBox("donation", null, new { @class = "form-control", @type = "number" })*@

            <label for="petName">Pet Name</label>
            @Html.TextBox("petName", null, new { @class = "form-control", @type = "text" })
        </div>

        <!-- Column 2 -->
        <div style="flex: 1; margin-right: 10px;">
            <label for="age">Age</label>
            @Html.TextBox("age", null, new { @class = "form-control", @type = "number" })

            <label for="type">Type</label>
            @*@Html.TextBox("type", null, new { @class = "form-control", @type = "text" })*@
            <select class="form-control" name="type">
                <option value="0">Select a Type</option>

                @foreach (var opt in Model.Types)
                {
                    {

                        <option value="@opt.TypeName">@opt.TypeName</option>
                    }
                }
            </select>

            <label for="weight">Weight </label>
            @Html.TextBox("weight", null, new { @class = "form-control", @type = "number" })

        </div>

        <!-- Column 3 -->
        <div style="flex: 1;">


            <label for="breed">Breed</label>
            @*@Html.TextBox("breed", null, new { @class = "form-control", @type = "number" })*@
            <select class="form-control" name="breed">
                <option value="0">Select a Breed</option>

                @foreach (var opt in Model.Breeds)
                {
                    {

                        <option value="@opt.BreedID">@opt.BreedName</option>
                    }
                }
            </select>

            <label for="gender">Gender</label>
            @*@Html.TextBox("gender", null, new { @class = "form-control", @type = "text" })*@
        <select class="form-control" name="gender">
            <option value="0">Select a Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>

        </select>

            <label for="location">Location</label>
            @*@Html.TextBox("location", null, new { @class = "form-control", @type = "number" })*@
            <select class="form-control" name="location">
                <option value="0">Select a Location</option>

                @foreach (var opt in Model.Locations)
                {
                    {

                        <option value="@opt.LocationID">@opt.LocationName</option>
                    }
                }
            </select>

            @*<label for="phonenumber">Phone Number</label>
        @Html.TextBox("phonenumber", null, new { @class = "form-control", @type = "text" })*@

            @*<label for="donation">Donation</label>
        @Html.TextBox("donation", null, new { @class = "form-control", @type = "number" })*@
            <br />
            <input type="file" name="ImageFile" required>
        </div>

    </div>
    <br />
    <input type="submit" class="btn btn-success" value="Post" />

}


}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
